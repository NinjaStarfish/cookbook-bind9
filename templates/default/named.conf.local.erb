<% @zonefiles.each do |conf| -%>
zone "<%= @domain %>" IN {
  type <%= @type %>;
  file "/var/cache/bind/<%= @domain %>";
  allow-transfer {
  <% @allow_transfer.each do |ip| -%>
    <%= ip %>;
  <% end %>
  };
};

<% end %>
